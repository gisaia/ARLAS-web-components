{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/histogram",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@angular/core": ["node_modules/@angular/core"],
      "rxjs/*": ["node_modules/rxjs/*"],
      "d3/*": ["node_modules/d3/*"]
    },
    "lib": [
      "es2015",
      "es6",
      "dom"
    ]
  },
  "files": [
    "src/components/histogram/index.ts"
  ],
  "include": [
    "src/components/histogram/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/app/**.ts",
    "src/components/**/*.spec.*",
    "e2e/"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
